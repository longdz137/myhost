        const checkoutForm = document.getElementById('checkoutForm');
        const paymentMethods = document.querySelectorAll('.payment-method');
        const paymentMethodInput = document.getElementById('paymentMethod');
        
        // M·ªü modal gi·ªè h√†ng
        cartIcon.addEventListener('click', () => {
            cartModal.style.display = 'flex';
            updateCartDisplay();
        });
        
        // ƒê√≥ng modal
        closeModal.addEventListener('click', () => {
            cartModal.style.display = 'none';
        });
        
        // ƒê√≥ng modal khi click b√™n ngo√†i
        window.addEventListener('click', (e) => {
            if (e.target === cartModal) {
                cartModal.style.display = 'none';
            }
        });
        
        // Th√™m s·∫£n ph·∫©m v√†o gi·ªè
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', (e) => {
                const id = e.target.getAttribute('data-id');
                const name = e.target.getAttribute('data-name');
                const price = parseInt(e.target.getAttribute('data-price'));
                
                // Ki·ªÉm tra xem s·∫£n ph·∫©m ƒë√£ c√≥ trong gi·ªè ch∆∞a
                const existingItem = cart.find(item => item.id === id);
                
                if (existingItem) {
                    existingItem.quantity += 1;
                } else {
                    cart.push({
                        id,
                        name,
                        price,
                        quantity: 1
                    });
                }
                
                updateCartCount();
                showAddToCartAlert(name);
            });
        });
        
        // C·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng s·∫£n ph·∫©m tr√™n icon gi·ªè h√†ng
        function updateCartCount() {
            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
            cartCount.textContent = totalItems;
        }
        
        // C·∫≠p nh·∫≠t hi·ªÉn th·ªã gi·ªè h√†ng trong modal
        function updateCartDisplay() {
            if (cart.length === 0) {
                cartItems.innerHTML = '<p class="empty-cart">Gi·ªè h√†ng c·ªßa b·∫°n ƒëang tr·ªëng</p>';
                cartTotal.textContent = 'T·ªïng c·ªông: 0ƒë';
                return;
            }
            
            let itemsHTML = '';
            let total = 0;
            
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                itemsHTML += `
                    <div class="cart-item">
                        <div class="cart-item-info">
                            <h4>${item.name}</h4>
                            <p>${item.price.toLocaleString()}ƒë x ${item.quantity}</p>
                        </div>
                        <div class="cart-item-price">${itemTotal.toLocaleString()}ƒë</div>
                        <div class="cart-item-remove" data-id="${item.id}">
                            <i class="fas fa-trash"></i>
                        </div>
                    </div>
                `;
            });
            
            cartItems.innerHTML = itemsHTML;
            cartTotal.textContent = `T·ªïng c·ªông: ${total.toLocaleString()}ƒë`;
            
            // Th√™m s·ª± ki·ªán x√≥a s·∫£n ph·∫©m
            document.querySelectorAll('.cart-item-remove').forEach(button => {
                button.addEventListener('click', (e) => {
                    const id = e.target.closest('.cart-item-remove').getAttribute('data-id');
                    removeFromCart(id);
                });
            });
        }
        
        // X√≥a s·∫£n ph·∫©m kh·ªèi gi·ªè
        function removeFromCart(id) {
            cart = cart.filter(item => item.id !== id);
            updateCartCount();
            updateCartDisplay();
        }
        
        // Hi·ªÉn th·ªã th√¥ng b√°o khi th√™m v√†o gi·ªè
        function showAddToCartAlert(productName) {
            alert(`ƒê√£ th√™m "${productName}" v√†o gi·ªè h√†ng!`);
        }
        
        // Ch·ªçn ph∆∞∆°ng th·ª©c thanh to√°n
        paymentMethods.forEach(method => {
            method.addEventListener('click', () => {
                paymentMethods.forEach(m => m.classList.remove('selected'));
                method.classList.add('selected');
                paymentMethodInput.value = method.getAttribute('data-method');
            });
        });
        
        // X·ª≠ l√Ω thanh to√°n
        checkoutForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            if (cart.length === 0) {
                alert('Gi·ªè h√†ng c·ªßa b·∫°n ƒëang tr·ªëng!');
                return;
            }
            
            if (!paymentMethodInput.value) {
                alert('Vui l√≤ng ch·ªçn ph∆∞∆°ng th·ª©c thanh to√°n!');
                return;
            }
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const address = document.getElementById('address').value;
            const note = document.getElementById('note').value;
            
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            // T·∫°o th√¥ng tin ƒë∆°n h√†ng
            const orderInfo = {
                customer: { name, email, phone, address },
                items: cart,
                paymentMethod: paymentMethodInput.value,
                note,
                total,
                date: new Date().toISOString()
            };
            
            // G·ª≠i ƒë∆°n h√†ng qua Telegram bot
            sendOrderToTelegram(orderInfo);
            
            // Hi·ªÉn th·ªã th√¥ng b√°o
            alert('ƒê∆°n h√†ng c·ªßa b·∫°n ƒë√£ ƒë∆∞·ª£c g·ª≠i th√†nh c√¥ng! Ch√∫ng t√¥i s·∫Ω li√™n h·ªá v·ªõi b·∫°n trong th·ªùi gian s·ªõm nh·∫•t.');
            
            // Reset gi·ªè h√†ng v√† form
            cart = [];
            updateCartCount();
            updateCartDisplay();
            checkoutForm.reset();
            cartModal.style.display = 'none';
        });
        
        // G·ª≠i ƒë∆°n h√†ng qua Telegram bot
        function sendOrderToTelegram(orderInfo) {
            // T·∫°o n·ªôi dung tin nh·∫Øn
            let message = `üõí *ƒê∆†N H√ÄNG M·ªöI* üõí\n\n`;
            message += `*Kh√°ch h√†ng:* ${orderInfo.customer.name}\n`;
            message += `*Email:* ${orderInfo.customer.email}\n`;
            message += `*ƒêi·ªán tho·∫°i:* ${orderInfo.customer.phone}\n`;
            message += `*ƒê·ªãa ch·ªâ:* ${orderInfo.customer.address || 'Kh√¥ng c√≥'}\n\n`;
            message += `*S·∫£n ph·∫©m:*\n`;
            
            orderInfo.items.forEach(item => {
                message += `- ${item.name} (${item.price.toLocaleString()}ƒë x ${item.quantity}) = ${(item.price * item.quantity).toLocaleString()}ƒë\n`;
            });
            
            message += `\n*T·ªïng c·ªông:* ${orderInfo.total.toLocaleString()}ƒë\n`;
            message += `*Ph∆∞∆°ng th·ª©c thanh to√°n:* ${getPaymentMethodName(orderInfo.paymentMethod)}\n`;
            message += `*Ghi ch√∫:* ${orderInfo.note || 'Kh√¥ng c√≥'}\n\n`;
            message += `*Th·ªùi gian:* ${new Date(orderInfo.date).toLocaleString('vi-VN')}`;
            
            // Thay th·∫ø b·∫±ng token bot v√† chat ID th·ª±c t·∫ø c·ªßa b·∫°n
            const botToken = '7191581339:AAGIEkMwHToFmFgtGfmy0Pk4SwQqwByx2Hg';
            const chatId = '-4671675470';
            
            // G·ª≠i request ƒë·∫øn API Telegram
            fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    chat_id: chatId,
                    text: message,
                    parse_mode: 'Markdown'
                })
            })
            .then(response => response.json())
            .then(data => console.log('Telegram response:', data))
            .catch(error => console.error('Error sending to Telegram:', error));
        }
        
        // L·∫•y t√™n ph∆∞∆°ng th·ª©c thanh to√°n
        function getPaymentMethodName(method) {
            switch(method) {
                case 'atm': return 'Chuy·ªÉn kho·∫£n ATM';
                case 'card': return 'Th·∫ª Visa/Master';
                case 'momo': return 'V√≠ MoMo';
                case 'zalopay': return 'ZaloPay';
                case 'scratch': return 'Th·∫ª c√†o';
                default: return 'Kh√°c';
            }
        }
    </script>
</body>
</html>
