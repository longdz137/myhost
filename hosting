    <script>
        // Giỏ hàng
        let cart = [];
        const cartIcon = document.getElementById('cartIcon');
        const cartModal = document.getElementById('cartModal');
        const closeModal = document.getElementById('closeModal');
        const cartItems = document.getElementById('cartItems');
        const cartCount = document.getElementById('cartCount');
        const cartTotal = document.getElementById('cartTotal');
        const checkoutForm = document.getElementById('checkoutForm');
        const paymentMethods = document.querySelectorAll('.payment-method');
        const paymentMethodInput = document.getElementById('paymentMethod');
        
        // Mở modal giỏ hàng
        cartIcon.addEventListener('click', () => {
            cartModal.style.display = 'flex';
            updateCartDisplay();
        });
        
        // Đóng modal
        closeModal.addEventListener('click', () => {
            cartModal.style.display = 'none';
        });
        
        // Đóng modal khi click bên ngoài
        window.addEventListener('click', (e) => {
            if (e.target === cartModal) {
                cartModal.style.display = 'none';
            }
        });
        
        // Thêm sản phẩm vào giỏ
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', (e) => {
                const id = e.target.getAttribute('data-id');
                const name = e.target.getAttribute('data-name');
                const price = parseInt(e.target.getAttribute('data-price'));
                
                // Kiểm tra xem sản phẩm đã có trong giỏ chưa
                const existingItem = cart.find(item => item.id === id);
                
                if (existingItem) {
                    existingItem.quantity += 1;
                } else {
                    cart.push({
                        id,
                        name,
                        price,
                        quantity: 1
                    });
                }
                
                updateCartCount();
                showAddToCartAlert(name);
            });
        });
        
        // Cập nhật số lượng sản phẩm trên icon giỏ hàng
        function updateCartCount() {
            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
            cartCount.textContent = totalItems;
        }
        
        // Cập nhật hiển thị giỏ hàng trong modal
        function updateCartDisplay() {
            if (cart.length === 0) {
                cartItems.innerHTML = '<p class="empty-cart">Giỏ hàng của bạn đang trống</p>';
                cartTotal.textContent = 'Tổng cộng: 0đ';
                return;
            }
            
            let itemsHTML = '';
            let total = 0;
            
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                itemsHTML += `
                    <div class="cart-item">
                        <div class="cart-item-info">
                            <h4>${item.name}</h4>
                            <p>${item.price.toLocaleString()}đ x ${item.quantity}</p>
                        </div>
                        <div class="cart-item-price">${itemTotal.toLocaleString()}đ</div>
                        <div class="cart-item-remove" data-id="${item.id}">
                            <i class="fas fa-trash"></i>
                        </div>
                    </div>
                `;
            });
            
            cartItems.innerHTML = itemsHTML;
            cartTotal.textContent = `Tổng cộng: ${total.toLocaleString()}đ`;
            
            // Thêm sự kiện xóa sản phẩm
            document.querySelectorAll('.cart-item-remove').forEach(button => {
                button.addEventListener('click', (e) => {
                    const id = e.target.closest('.cart-item-remove').getAttribute('data-id');
                    removeFromCart(id);
                });
            });
        }
        
        // Xóa sản phẩm khỏi giỏ
        function removeFromCart(id) {
            cart = cart.filter(item => item.id !== id);
            updateCartCount();
            updateCartDisplay();
        }
        
        // Hiển thị thông báo khi thêm vào giỏ
        function showAddToCartAlert(productName) {
            alert(`Đã thêm "${productName}" vào giỏ hàng!`);
        }
        
        // Chọn phương thức thanh toán
        paymentMethods.forEach(method => {
            method.addEventListener('click', () => {
                paymentMethods.forEach(m => m.classList.remove('selected'));
                method.classList.add('selected');
                paymentMethodInput.value = method.getAttribute('data-method');
            });
        });
        
        // Xử lý thanh toán
        checkoutForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            if (cart.length === 0) {
                alert('Giỏ hàng của bạn đang trống!');
                return;
            }
            
            if (!paymentMethodInput.value) {
                alert('Vui lòng chọn phương thức thanh toán!');
                return;
            }
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const address = document.getElementById('address').value;
            const note = document.getElementById('note').value;
            
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            // Tạo thông tin đơn hàng
            const orderInfo = {
                customer: { name, email, phone, address },
                items: cart,
                paymentMethod: paymentMethodInput.value,
                note,
                total,
                date: new Date().toISOString()
            };
            
            // Gửi đơn hàng qua Telegram bot
            sendOrderToTelegram(orderInfo);
            
            // Hiển thị thông báo
            alert('Đơn hàng của bạn đã được gửi thành công! Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất.');
            
            // Reset giỏ hàng và form
            cart = [];
            updateCartCount();
            updateCartDisplay();
            checkoutForm.reset();
            cartModal.style.display = 'none';
        });
        
        // Gửi đơn hàng qua Telegram bot
        function sendOrderToTelegram(orderInfo) {
            // Tạo nội dung tin nhắn
            let message = `🛒 *ĐƠN HÀNG MỚI* 🛒\n\n`;
            message += `*Khách hàng:* ${orderInfo.customer.name}\n`;
            message += `*Email:* ${orderInfo.customer.email}\n`;
            message += `*Điện thoại:* ${orderInfo.customer.phone}\n`;
            message += `*Địa chỉ:* ${orderInfo.customer.address || 'Không có'}\n\n`;
            message += `*Sản phẩm:*\n`;
            
            orderInfo.items.forEach(item => {
                message += `- ${item.name} (${item.price.toLocaleString()}đ x ${item.quantity}) = ${(item.price * item.quantity).toLocaleString()}đ\n`;
            });
            
            message += `\n*Tổng cộng:* ${orderInfo.total.toLocaleString()}đ\n`;
            message += `*Phương thức thanh toán:* ${getPaymentMethodName(orderInfo.paymentMethod)}\n`;
            message += `*Ghi chú:* ${orderInfo.note || 'Không có'}\n\n`;
            message += `*Thời gian:* ${new Date(orderInfo.date).toLocaleString('vi-VN')}`;
            
            // Thay thế bằng token bot và chat ID thực tế của bạn
            const botToken = '7191581339:AAGIEkMwHToFmFgtGfmy0Pk4SwQqwByx2Hg';
            const chatId = '-4671675470';
            
            // Gửi request đến API Telegram
            fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    chat_id: chatId,
                    text: message,
                    parse_mode: 'Markdown'
                })
            })
            .then(response => response.json())
            .then(data => console.log('Telegram response:', data))
            .catch(error => console.error('Error sending to Telegram:', error));
        }
        
        // Lấy tên phương thức thanh toán
        function getPaymentMethodName(method) {
            switch(method) {
                case 'atm': return 'Chuyển khoản ATM';
                case 'card': return 'Thẻ Visa/Master';
                case 'momo': return 'Ví MoMo';
                case 'zalopay': return 'ZaloPay';
                case 'scratch': return 'Thẻ cào';
                default: return 'Khác';
            }
        }
    </script>
</body>
</html>
